<Window x:Class="SpeedTestSandbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <TextBlock x:Name="TextTitle" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Speed Test" VerticalAlignment="Top" FontFamily="Verdana" FontWeight="Bold" FontSize="24" />
        <TextBox x:Name="TextBoxOutput" Margin="20,44,20,40" TextWrapping="Wrap" FontFamily="Verdana" FontSize="18" />
        <Button x:Name="BtnExit" Content="Exit" HorizontalAlignment="Right" Margin="0,0,25,15" VerticalAlignment="Bottom" Width="75" FontFamily="Verdana" Click="btnExit_Click" />
        <Button x:Name="BtnGo" Content="Go" HorizontalAlignment="Left" Margin="25,0,0,15" VerticalAlignment="Bottom" Width="75" Click="btnGo_Click" FontFamily="Verdana" IsDefault="True"/>
        <Button x:Name="BtnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="105,0,0,15" VerticalAlignment="Bottom" Width="75" Click="btnCancel_Click" IsEnabled="False" FontFamily="Verdana" IsDefault="True"/>
    </Grid>
</Window>
